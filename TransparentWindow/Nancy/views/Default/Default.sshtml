<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        
        <script src="../js/jquery-2.1.0.min.js" type="text/javascript"></script>
		<script src="../js/regions.js" type="text/javascript"></script>
        
        <script src="../js/cufon-yui.js" type="text/javascript"></script>
        <script src="../fonts/segoe-ui.cufonfonts.js" type="text/javascript"></script>
    
		<script type="text/javascript">
			Cufon.replace('.cufon-segoe-ui', { fontFamily: 'Segoe UI' });
		</script>

        <link rel="stylesheet" type="text/css" href="../css/Reset.css">
        <style>
            html
            {
                width: 100%;
                height: 100%;
                background-color: rgba(255, 255, 255, 0);
            }
            
            #no-url
            {
                font-size: 2em;
                
                margin-left: auto;
                margin-right: auto;
                margin-top: 1em;
                width: 50%;
                text-align: center;
                
                background-color: rgba(255, 255, 255, 0.8);
                opacity: 0.5;
                
                -webkit-transition: opacity 0.5s;
            }
            
            #no-url:hover
            {
                opacity: 1;
            }
        </style>
    </head>
    <body>
        <div class="content form-region">
            <div class="cufon-segoe-ui" id="no-url">There is no URL configured for this screen - Click HERE to configure.</div>
        </div>
        
        <!-- To avoid delays, initialize Cufon before other scripts at the bottom -->
		<script type="text/javascript">Cufon.now();</script>

		<script type="text/javascript">$(function() {
			regions.evaluateRegions("http://localhost:56347/", "@Model.ClientId")
		});</script>
    </body>
</html>