<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
		<title>@Model.ClientId</title>
        
        <script src="../js/jquery-2.1.0.min.js" type="text/javascript"></script>
		<script src="../js/d3.min.js" type="text/javascript"></script>

		<script src="../js/regions.js" type="text/javascript"></script>
        
        <script src="../js/cufon-yui.js" type="text/javascript"></script>
        <script src="../fonts/segoe-ui.cufonfonts.js" type="text/javascript"></script>
    
		<script type="text/javascript">
			Cufon.replace('.cufon-segoe-ui', { fontFamily: 'Segoe UI' });
		</script>

        <link rel="stylesheet" type="text/css" href="../css/Reset.css">
        <style>
            html
            {
                width: 100%;
                height: 100%;
                background-color: rgba(255, 255, 255, 0);
            }
            
			.top-left-container
			{
				font-size: 6em;
				margin-top: 0.4em;
				margin-left: 0.4em;
			}

            .clock
            {                
                text-align: left;
                
                background-color: rgba(255, 255, 255, 0.0);
                opacity: 0.99;
            }

			.clear-left
			{
				float: left;
				clear: left;
			}
        </style>
    </head>
    <body>
        <div class="top-left-container">
            <span class="cufon-segoe-ui clear-left form-region clock"></span>

			<span class="cufon-segoe-ui clear-left form-region">SOME TEXT</span>
        </div>
        
        <!-- To avoid delays, initialize Cufon before other scripts at the bottom -->
		<script type="text/javascript">Cufon.now();</script>

		<script type="text/javascript">$(function() {
			setInterval(function() {

				var d = new Date();
				$('.clock').text(("0" + d.getHours()).slice(-2) + ":" + ("0" + d.getMinutes()).slice(-2) + ":" + ("0" + d.getSeconds()).slice(-2));

				Cufon.replace('.cufon-segoe-ui', {
					fontFamily: 'Segoe UI',
					textShadow: "rgba(151, 151, 151, 0.7) 1px 1px, rgba(151, 151, 151, 0.7) -1px -1px, rgba(151, 151, 151, 0.7) 1px -1px, rgba(151, 151, 151, 0.7) -1px 1px"
				});
				regions.evaluateRegions("http://localhost:56347/", "@Model.ClientId");

			}, 100);
		});</script>
    </body>
</html>